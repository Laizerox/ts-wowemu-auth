{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "build/types",
    "esModuleInterop": true,
    "outDir": "./build",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "types": ["jest", "node"]
  },
  "include": ["src/**/*"],
  "exclude": ["**/node_modules", "**/build", "**/dist", "**/test-data" ,"**/*.md", "**/rollup.config.js", "**/*.spec.ts", "**/*.test.ts"]
}